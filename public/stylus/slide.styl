*
  margin 0
  padding 0
  box-sizing border-box

html, body, #app
  height 100%

#app
  position relative
  .slide
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    text-align center
    font-size 150px
    background-color #fff
    transition transform 1s
    &.left
      transform translate(-100%, 0)
    &.right
      transform translate(100%, 0)
    &.top
      transform translate(0, -100%)
    &.bottom
      transform translate(0, -100%)

#mask
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 9999
  background rgba(0, 0, 0, .8)

#qrcode
  position fixed
  top 50%
  left 50%
  margin -110px 0 0 -110px
  width 220px
  height 220px
  padding 10px
  z-index 10000

for $i in (1..100)
  .z{$i}
    z-index $i
